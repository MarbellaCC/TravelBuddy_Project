@model IEnumerable<TravelBuddy.Models.Activity>

@{
    ViewData["Title"] = "DayDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>DayDetails</h1>

<p>
    <a asp-action="CreateActivity">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlaceName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlaceName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                <a asp-action="EditActivity" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="ActivityDetails" asp-route-id="@item.Id">Details</a> |
                <a asp-action="DeleteActivity" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

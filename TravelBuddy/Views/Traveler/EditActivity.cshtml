@model TravelBuddy.Models.Activity

@{
    ViewData["Title"] = "EditActivity";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit Activity</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditActivity">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Time" class="control-label"></label>
                <input asp-for="Time" class="form-control" />
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeOfActivity" class="control-label"></label>
                <select asp-for="TypeOfActivity" class="form-control">
                    <option value="None">Select Activity</option>
                    <option value="tourist_attraction">Adventure</option>
                    <option value="restaurant">Restaurant</option>
                </select>
                <span asp-validation-for="TypeOfActivity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeOfAdventureOrRestaurant" class="control-label"></label>
                <input asp-for="TypeOfAdventureOrRestaurant" class="form-control" />
                <span asp-validation-for="TypeOfAdventureOrRestaurant" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxDistance" class="control-label"></label>
                <input asp-for="MaxDistance" class="form-control" />
                <span asp-validation-for="MaxDistance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="DayDetails">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
